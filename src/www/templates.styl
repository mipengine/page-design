@import './_inc/common.styl'

/*fixed*/
.header
    position fixed
    width 100%
    top 0

div.template-content
    margin 60px auto 45px auto

.template-nav
    position fixed
    width 195px

.templates
    margin-left 195px
    
/*end*/

.template-content 
    background #fff
    width 1110px
    margin auto

.template-nav
    margin-top 60px
    -webkit-box-flex 1
    -webkit-flex 1 1 200px
    flex 1 1 201px

.template-nav ul
    list-style none

.template-nav ul li
    margin-bottom 10px
    padding 10px 0px 10px 17px

.template-nav ul li a 
    opacity 0.54
    font-family PingFangSC-Regular
    font-size 14px
    color #000
    line-height 14px

.template-nav ul li:hover
    background rgba(0, 0, 0, 0.02)
    cursor pointer

.template-nav ul li.current
    background rgba(0, 0, 0, 0.04)

.template-nav ul li:hover a, .template-nav ul li.current a
    opacity 0.88

.templates
    border-left 1px solid rgba(0, 0, 0, 0.08)
    -webkit-box-flex 1
    -webkit-flex 1 1 85%
    flex 1 1 85%

.templates-list
    padding 0 0 0 40px
    dt
        padding-top 90px
        font-size 16px
        h2
            font-size 36px
            color #000

.template-descripe
    margin-top 30px

.template-descripe
    font-size 16px
    color rgba(0, 0, 0, 0.88)

.template-img
    margin-top 45px
    width 440px
    &:hover
        box-shadow 0px 0px 10px 5px rgba(0, 0, 0, 0.1)

.template-control
    width 440px
    text-align center
    margin-top 30px
    a
        width 100px
        height 30px
        line-height 28px
        &.tag-down
            margin-left 27px
        &:hover
            background-color rgba(0, 0, 0, 0.02)
        &:active
            background-color rgba(0, 0, 0, 0.05)

.template-preview
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index 9999
    display none

.template-preview-mask
    width 100%
    height 100%
    background-color rgba(255,255,255,0.8)

.template-preview-mask-main
    width 370px
    height 688px
    margin auto
    position relative
    top 50%
    transform translateY(-50%)
    padding 56px 25px
    background-color #fff
    border 1px solid #eee
    box-shadow: 0 15px 30px 0 rgba(0, 0, 0, 0.20);
    border-radius: 50px;
    iframe
        border 1px solid rgba(156, 156, 156, 0.31)

.template-preview-control
    width 100%
    margin auto
    height 60px
    line-height 60px
    background #fff
    box-shadow 0 6px 9px 0 rgba(0,0,0,0.24)
    .preview-content
        width 1110px
        margin auto
        position relative
    .template-preview-control-main
        width 370px
        height 100%
        margin auto
        color #000
        align-items center 
        padding 0 31px 0 22px
        .templates-select
            width 192px
            height 30px
            background-color #fff
        .preview-btn
            padding 0 25px
            margin-left 36px
    .close-btn
        color #000
        width 100px
        border-color #000
        text-align center
        position absolute
        right 0
        top 0

@media screen and (min-width: 767px)
    .tag-wise
        display none

@media screen and (max-width: 767px)
    .template-content
        width 100%
        .template-nav
            display none
        .templates
            margin-left 0
            padding 0 15px
        .templates-list
            padding-left 0
            dd
                margin-bottom 15px
            dt
                padding-top 20px
            .template-control
                width 100%
            .template-img
                width 100%
            .tag-wise
                display inline-block
            .tag-pc
                display none
        .template-preview
            display none