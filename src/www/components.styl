@import './_inc/common.styl'
@import './_inc/hljs.styl'

.components
    layout()
    .inner
        display flex
    .article
        padding-bottom 90px
        flex 1 1 auto
        overflow hidden
        padding-left 40px
        border-left 1px solid rgba(0,0,0,0.08)
        h2
            padding-top 90px
            font-size 36px
            line-height 36px
            font-weight 400
            & + p
                padding-top 20px
        h3
            font-size 20px
            line-height 20px
            padding-top 65px
            font-weight 400
            & + p
                padding-top 10px
        p
            line-height 35px
        .preview
            overflow hidden
            margin-top 30px
            border 1px solid  #f1f1f1
            .title
                height 40px
                line-height 40px
                display flex
                justify-content space-between
                background-color #FAFAFA
                padding-left 21px
                padding-right 21px
                &[accordionbtn]
                    cursor pointer
            .code
                display none
                padding 20px
            .iframe
                padding 21px
                &.iframe-noborder
                    padding-left 0 !important
                    padding-right 0 !important
        .scripttag
            .code
                line-height 30px
                display block
    aside
        width 195px
        padding-top 80px
        flex none
        mip-scroll-anchor
            display block
            width 195px
            position fixed
            top 120px
            z-index 10
        ul
            list-style none
            &:before
                content ''
                position absolute
                right -1px
                top -80px
                width 1px
                height 80px
                background-color #fff
        a
            display block
            line-height 40px
            height 40px
            color 14px
            color rgba(0, 0, 0, .54)
            text-indent 44px
            &.current
                background-color rgba(0, 0, 0, .04)
                color rgba(0, 0, 0, .88)
            &:hover
                background-color rgba(0, 0, 0, .02)
                color rgba(0, 0, 0, .54)

@media screen and (max-width screenWidth)
    .components
        aside
            display none
        .article
            padding-bottom 60px
            border-left none
            padding-left 0
            h2
                font-size 24px
                line-height 24px
                padding-top 60px
                & + p
                    padding-top 16px
            h3
                font-size 18px
                line-height 18px
                padding-top 50px
                & + p
                    padding-top 5px
            p
                font-size 14px
                line-height 20px
            .preview
                margin-top 20px
                .title
                    padding-left 16px
                    padding-right 16px
                .iframe
                    padding 16px
