@import './_inc/common.styl'

.banner
    box-sizing content-box
    position relative
    height 468px
    overflow hidden
    &:after
        z-index 1
        content ''
        background url(img/index/banner.jpg) no-repeat center bottom
        background-size contain
        width 100%
        height 100%
        display block
        position absolute
        left 0
        top 0
        box-sizing border-box
    .inner
        layout()
        position relative
        z-index 10
        top 50%
        transform translateY(-50%)
    h1
        font-weight 700
        margin 0
        padding-bottom 13px
        font-size 81px
        letter-spacing 6.07px
    .text
        font-size 20px
        letter-spacing 4px
    .started
        padding-top 46px
        a
            display inline-block
            width 150px
            height 40px
            line-height 40px
            text-align center
            background-color #1D63EB
            border-radius 3px
            color #fff
            &:hover
                background-color #2E6FEC
            &:active
                background-color #1A5BD8
        .icon
            font-size 10px
@media screen and (max-width screenWidth)
    .banner
        height 700px
        .inner
            top 0
            transform none
            text-align center
        h1
            padding-top 61px
            font-size 60px
            line-height 60px
            padding-bottom 4px
        .text
            font-size 16px
            line-height 16px
            padding-top 12px
        .started
            padding-top 28px
            a
                width 154px
                height 36px
                line-height 36px
        &:after
            background-position 80% bottom
            background-size 190%
@media screen and (max-width 600px)
    .banner
        height 600px
@media screen and (max-width 500px)
    .banner
        height 520px
@media screen and (max-width 400px)
    .banner
        height 480px


.intro
    layout()
    ul
        padding 45px 0
        height 54px
        box-sizing content-box
        list-style none
        display flex
        justify-content space-between
        li
            position relative
            padding-left 64px
    .img
        display inline-block
        position absolute
        left 0
        top 0
        height 54px
        border 1px solid  #333
        border-radius 50%
        text-align center
        line-height 50px
        width 54px
    .icon
        font-size 30px
        color #333
        &.icon-code
            font-size 40px
    h3
        font-size 24px
        line-height 24px
        font-weight 400
        color #000
    p
        line-height 16px
        color #999
    .wise
        padding-top 16px
        display none
        font-size 14px
        line-height 14px
@media screen and (max-width 950px)
    .intro
        text-align center
        .wise
            display block
        .pc
            display none
        ul
            height auto
            padding 32px 16px
            li
                padding-left 0
        .img
            display block
            border none
            border-radius none
            position relative
            height 25px
            line-height 25px
            margin 0 auto
        .icon
            font-size 25px
            &.icon-code
                font-size 35px
                margin-top -5px
        p
            color rgba(0, 0, 0, .88)
            font-size 14px


.widget
    .inner
        position relative
        height 720px
        overflow hidden
        layout()
        .content
            position absolute
            top 50%
            transform translateY(-50%)
            h3
                font-size 42px
                font-weight 400
                line-height 42px
            p
                color #999
                font-size 20px
                line-height 20px
                padding-top 20px
            .btn
                margin 0
                margin-top 30px
                border-color #000
                color #000
                font-size 14px
                hover()
                active()
                .icon
                    font-size 10px
        .img
            position absolute
    &.widget-gray
        background-color #fafafa
    &.widget-design
        .img
            width 681px
            height 660px
            right 0
            top 35px
    &.widget-develop
        .content
            left 724px
        .img
            left 0
            top 35px
            width 684px
            height 660px
    &.widget-components
        .img
            width 696px
            height 628px
            right 0
            top 50px
@media screen and (max-width 1024px)
    .widget
        .inner
            height auto
            padding 38px 0
            .img
                position static
                width 80%
                margin-left auto
                margin-right auto
                height auto
                padding-bottom 10px
            .content
                position static
                text-align center
                transform none
                h3
                    font-size 28px
                    line-height 28px
                p
                    font-size 14px
                    line-height 14px
                    padding-top 16px
                .btn
                    margin-top 24px


.shortcut
    padding 90px 0
    layout()
    h2
        text-align center
        font-size 30px
        line-height 30px
        font-weight 400
    ul
        display flex
        justify-content space-between
        list-style none
        padding-top 45px
        margin-left -40px
        li
            width 33.33%
            padding-left 40px
        a
            position relative
            text-align center
            display block
            border 1px solid  #f1f1f1
            border-radius 6px
            padding-top 45px
            padding-bottom 30px
            transition box-shadow .3s
            active()
            &:hover
                box-shadow 0 5px 10px 0 rgba(0, 0, 0, .1)
            .img
                font-size 75px
                line-height 75px
                height 75px
                .icon
                    vertical-align top
            h4
                font-size 20px
                font-weight 400
                line-height 20px
                padding-top 30px
                color #000
            p
                padding-top 20px
                line-height 16px
                color #999
@media screen and (max-width screenWidth)
    .shortcut
        padding-top 40px
        padding-bottom 40px
        h2
            font-size 24px
            line-height 24px
        ul
            display block
            margin 0
            padding 0
            padding-top 30px
            margin-bottom -16px
            overflow hidden
            li
                width 100%
                margin 0
                padding 0
                margin-bottom 16px
            a
                border-radius 3px
                text-align left
                height auto
                padding 22px 0 22px 72px
                &:hover
                    box-shadow none
                .img
                    position absolute
                    left 16px
                    top 50%
                    margin-top -20px
                    font-size 40px
                    line-height 40px
                    width 40px
                    height 40px
                h4
                    font-size 18px
                    line-height 18px
                    padding 0
                p
                    font-size 14px
                    line-height 14px
                    padding-top 8px
