@media screen and (min-width: 767px)
    .header-nav
        display block

.header-mobile-nav-toggle
    display none

@media screen and (max-width: 767px)
    .row
        flex-wrap wrap
    .header-inner
        width 100%
    .header-mobile-nav-toggle
        position absolute
        top 0
        bottom 0
        right 20px
        width 25px
        height 20px
        margin auto
        opacity .5
        transition .2s
        cursor pointer
        outline none
        background-color transparent
        display block
        border none

    .header-mobile-nav-toggle span
        position absolute
        top 0
        left 0
        width 100%
        height 2px
        border-radius 2px
        background #3c63ecad
        transition .4s
        transform-origin 0

    .header-mobile-nav-toggle span:nth-child(2)
        top 9px

    .header-mobile-nav-toggle span:nth-child(3)
        top 18px
    mip-sidebar
        li
            padding 7px 20px
        li.current, li:active
            background rgba(0,0,0,0.1)



