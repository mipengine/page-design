.header
    background-color #fff
    position relative
    z-index 1000
    padding 0 10px
    box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.04)

.header ul
    list-style none

.header-inner
    width 1110px
    margin 0 auto

.header-flex
    display flex
    align-items center
    box-align center
    box-lines single
    box-orient horizontal
    flex-align center
    flex-flow row nowrap

.header-logo
    box-flex 1
    flex 0 35%

.header-logo a
    background #fff url(./img/mip_logo.png) center center no-repeat
    background-size: 102px 48px;
    width: 102px;
    height: 48px;

.header-nav
    font-size 14px
    display none
    box-flex 1
    flex 1 65%
    text-align right
    line-height 57px

.header-nav-list > li
    position relative
    display inline-block
    width 72px
    text-align center

.header-nav-list > li > a
    position relative
    text-decoration none
    font-size 16px
    color #000
    opacity 0.54
    font-family PingFangSC-Regular

.header-nav-list > li:hover
    background rgba(0, 0, 0, 0.02)
    cursor pointer

.header-nav-list > li:hover > a
    opacity 0.88

.header-nav-list > li.current > a
    border-bottom 3px solid #000
    opacity 0.88

