.footer
	width 100%
	height 363px
	background #000
	position relative

.footer-link
	display flex
	padding-top 80px
    text-align center

.footer-cate
	color #999
	flex 1 auto
	text-align center

.footer-cate span
	display inline-block
	font-size 18px
	color #fff
	padding-bottom 30px

.footer-cate ul
	list-style none

.footer-cate ul li
	font-size 16px
	padding-bottom 16px

.footer-cate ul li a
	color #999

.copyright
	position absolute
	text-align center
	bottom 30px
	width 100%
	color #999
	font-size 14px

@media screen and (max-width: 767px)
	.footer
		height auto
		.footer-link
			padding 40px 15px 0px 15px
			margin-left 0
			margin-right 0
			.footer-cate
				width 40%
				text-align left
				padding 0 0 0 15%
				span
					padding-bottom 15px
				margin-bottom 18px
	.copyright
		position static
		padding-bottom 5px