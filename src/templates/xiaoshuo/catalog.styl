@import './_inc/styl/base.styl'

.catalog-menu
    position relative
    background-color #fff
    select
        word-break normal
        word-wrap normal
        position relative
        -webkit-appearance none
        appearance none
        display inline-block
        padding 0 .24rem 0 .08rem
        width 100%
        height .38rem
        vertical-align middle
        line-height normal
        font-size .14rem
        color #000
        background-color transparent
        border 1px solid #eee
        border-radius 0
        overflow hidden
        outline none

.catalog-list
    li
        border-bottom 1px solid #f1f1f1
        line-height 30px

.catalog-page
    .disabled
        color #a0a0a0
        cursor not-allowed
