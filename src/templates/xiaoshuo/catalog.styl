@import './_inc/styl/base.styl'

/* 阻止小说阅读器主题背景修改详情页样式 */
html,body 
    background-color #fff!important

html,body.show-xiaoshuo-container
    background #fff
    line-height unset
    p.line-clamp1.gap-top
        font-size 16px
mip-history.mip-history-default
    background none!important

.catalog-back
     z-index 1111
    position absolute
    top 0px !important
    display inline-block
    padding 0
    width 44px!important
    height 44px
.catalog-back
    mip-history
        z-index 9999
        padding 10px 17px
        margin 0
.catalog-back
    svg
        width 14px
        height 14px
        fill rgb(0, 0, 0)
        position absolute
        top -45px
        z-index 9998
.catalog-menu
    position relative
    background-color #fff
    select
        word-break normal
        word-wrap normal
        position relative
        -webkit-appearance none
        appearance none
        display inline-block
        padding 0 .24rem 0 .08rem
        width 100%
        height .38rem
        vertical-align middle
        line-height normal
        font-size .14rem
        color #000
        background-color transparent
        border 1px solid #eee
        border-radius 0
        overflow hidden
        outline none

.catalog-list
    li
        border-bottom 1px solid #f1f1f1
        line-height 30px

.catalog-page
    .disabled
        color #a0a0a0
        cursor not-allowed

