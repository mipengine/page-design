@import './_inc/styl/base.styl'

html,body
    background-color #fff
    div.gap-top 
        p.line-clamp1,span.line-clamp1
            font-size 14px
            margin-bottom 0
h4
    font-weight normal
hr.hr-xl
    background-color #f5f5f5
.detail-info
    p.line-clamp1
        color #000
        line-height .16rem
        font-size 14px
        margin-bottom 15px
    .gap-top-large
        margin-top .2rem
    .row-bottom
        margin-bottom -.06rem
    .btn
        font-size 14px
        height .38rem
        line-height .38rem
        border-radius 3px
        div
            line-height .1rem
.detail-desc
    padding-top .1rem
    padding-bottom .1rem
    .gap-top-small
        margin-top .1rem
    mip-showmore.linear-gradient:after
        background transparent
    .details
        line-height .25rem
        height .35rem
.detail-catalog
    padding-top .1rem
    padding-bottom .1rem
    li
        border-bottom 1px solid #f1f1f1
        &:last-child
            border-bottom none
        a
            overflow hidden
        span
            color #999
            width 100px
    .gap-top
        margin-top .15rem
    .gap-bottom
        margin-bottom .2rem
.detail-desc
    .content
        font-size 14px
        color #555555
        line-height .24rem
    .details-tip-close, .details-tip-expand
        font-size 14px
        color #555
.detail-recommend
    padding-top .1rem
    .gap-top
         margin-top .15rem 