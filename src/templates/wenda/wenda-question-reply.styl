@import './_common/common.styl'

.med-question-answer 
    padding-top 20px
    &:before 
        content ''
        display block
        width 100%
        height 10px
        background #f1f1f1
        width 120%
        margin-left -10%
.med-img-content 
    padding-bottom 10px
.med-question-answer-more 
    background-color #f8f8f8
    padding 10px
.med-question-user-color 
    color #000
    font-weight 300
.med-question-doctor-color 
    color #01b7c9
    font-weight 300
.med-showmore-btn 
    text-align center
    margin 10px
    display block !important
    position relative
    &:after 
        content ""
        position absolute
        width 8px
        height 8px
        border-left 1px solid #000
        border-bottom 1px solid #000
        font-weight bold
        top 3px
        transform rotate(315deg) translate(25px,27px)
        -webkit-transform rotate(315deg) translate(25px,27px)
.mip-showmore-open 
    &:after 
        top 8px
        transform rotate(135deg) translate(-23px,-26px)
        -webkit-transform rotate(135deg) translate(-23px,-26px)
